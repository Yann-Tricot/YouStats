{% extends 'assets/base.html.twig' %}

{% block title "showCountry" %}

{% block body %}
    <div class="container mt-5">
        <div style="margin-top : 190px">
            {% include 'assets/carousel.html.twig' %}
        </div>
        <div class="container calendar">
            <div class="text-center ">
                <h2>Choisir un jour</h2>
                {{ form_start(dateForm) }}
                {{ form_widget(dateForm, { attr:{ class:'js-datepicker' } }) }}
                <button type="submit" class="btn btn-primary">Save</button>
                {{ form_end(dateForm) }}
            </div>
        </div>
        {% if (videos is defined) and (channels is defined) %}
            {% include 'assets/tabCountry.html.twig' %}
        {% endif %}
    </div>
{% endblock %}
{% block stylesheets %}
    {{ parent() }}

    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/css/bootstrap-datepicker.min.css">


    <style>
        .calendar{
            margin-top: 50px;
            margin-bottom: 50px;
        }
    </style>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/js/bootstrap-datepicker.min.js"></script>
    <script>
        jQuery(document).ready(function () {
            $('.js-datepicker').datepicker({
                format: 'yyyy/mm/dd',
            });
        });
    </script>
{% endblock %}

